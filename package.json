{
  "name": "dom-hotkey",
  "version": "2.0.0",
  "description": "dom-hotkey is hotkey library that works with the html attribute definition.",
  "license": "MIT",
  "author": "ofk <ofkjpn+npm@gmail.com> (https://github.com/ofk/)",
  "repository": "ofk/dom-hotkey",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "microbundle --tsconfig tsconfig.build.json",
    "lint": "run-s -c lint:*",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:package-json": "prettier-package-json -l",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc",
    "lint-fix": "run-s -c lint-fix:*",
    "lint-fix:eslint": "npm run lint:eslint -- --fix",
    "lint-fix:package-json": "prettier-package-json --write",
    "lint-fix:prettier": "prettier --write .",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@ofk/eslint-config-recommend": "^5.3.1",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "css.escape": "^1.5.1",
    "eslint": "^8.42.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.2",
    "microbundle": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "keywords": [],
  "lint-staged": {
    "package.json": "prettier-package-json --write",
    "*.{md,json,html}": "prettier --write",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --ext .js,.jsx,.ts,.tsx",
      "prettier --write"
    ]
  },
  "source": "src/index.ts"
}
